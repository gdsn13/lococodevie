%p= t('.title', :name => @account.name, :date => I18n.l(Time.now), :locale => @account.locale)
%p= link_to "Voir dans le back office", "http://www.olea-medical.com/admin/content_types/#{@content.content_type.slug}/contents/#{@content._id}/edit"

%hr

%p
  %b= t('.type', :type => @content.content_type.name, :locale => @account.locale)
  %br
  %i= @content.content_type.description

%hr

%ul
  - @content.custom_fields.each do |field|
    %li
      %strong= field.label
      &nbsp;-&nbsp;
      %i
        - if field.file?
          - if @content.send(field._name).url != nil
            = link_to "http://www.olea-medical.com#{@content.send(field._name).url}", @content.send(field._name).url
        - else
          = @content.send(field._alias)
